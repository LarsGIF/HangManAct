<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <EditText
        android:id="@+id/inTextView"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/inTextView"
        android:importantForAutofill="no"
        android:inputType="textCapCharacters"
        app:layout_constraintEnd_toStartOf="@+id/replayBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangmanImgView" />

    <EditText
        android:id="@+id/outTextView"
        android:layout_width="355dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/outTextView"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/outTextView"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/hangmanImgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/testBtnText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/replayBtn"
        app:layout_constraintTop_toBottomOf="@+id/hangmanImgView" />

    <EditText
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="250dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inTextView"
        app:layout_constraintVertical_bias="0.076" />

    <ImageView
        android:id="@+id/hangmanImgView"
        android:layout_width="107dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/replayBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outTextView"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/replayBtn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="@string/replayBtnText"
        app:layout_constraintEnd_toStartOf="@+id/testBtn"
        app:layout_constraintStart_toEndOf="@+id/inTextView"
        app:layout_constraintTop_toBottomOf="@+id/hangmanImgView" />

</android.support.constraint.ConstraintLayout>